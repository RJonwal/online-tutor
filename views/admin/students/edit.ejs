<div class="right_col" role="main">
  <!-- page content starts-->
  <div class="row main_row">
    <div class="x_panel form_panel">
      <div class="x_title">
        <h3 class="title-text">Edit Student</h3>
      </div>
      <div class="x_content">
        <form id="updateStudent" action="/students/update" method="post" class="form-horizontal form-label-left" enctype="multipart/form-data">
          <input type="hidden" name="student_id" value="<%=data.id %>">
          <div class="row">
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="first_name">First Name<span
                        class="required">*</span>
                    </label>
                    <div class="input-group">
                      <span class="input-group-text"><img src="/images/student.svg" class="mCS_img_loaded"></span>
                      <input type="text" name="first_name" class="form-control" placeholder="Enter First Name.." id="first_name" value="<%=data.first_name %>" required="required">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="last_name">Last Name<span
                      class="required">*</span>
                    </label>
                    <div class="input-group">
                      <span class="input-group-text"><img src="/images/student.svg" class="mCS_img_loaded"></span>
                      <input type="text" name="last_name" class="form-control" placeholder="Enter Last Name.."  value="<%=data.last_name %>"  id="last_name" required="required">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="email">Email Address
                    </label>
                    <div class="input-group">
                      <span class="input-group-text"><img src="/images/email.svg" class="mCS_img_loaded"></span>
                      <input type="email" name="email" class="form-control" value="<%=data.email %>" placeholder="Enter Email.." id="email" required="required">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="phone">Contact No.
                      <span class="required">*</span>
                    </label>
                    <div class="phone-group">
                      <input type="hidden" name="dial_code" id="dial_code" value="<%=data.dial_code%>">
                      <input type="hidden" name="iso_code" id="iso_code" value="<%=data.iso_code%>">
                      <input type="text" name="phone" value="<%=data.phone %>" class="form-control" id="phone">
                      <span id="error-msg" class="hide"></span>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="gender">Gender</label>
                    <div class="input-group flex-nowrap">
                      <span class="input-group-text"><img src="/images/gender.svg" class="mCS_img_loaded"></span>
                      <select class="form-control select2" name="gender" >
                        <option value="">Select Gender</option>
                        <option value="1" <%=data.status=='1' ? 'selected' : '' %>>Male</option>
                        <option value="0" <%=data.status=='0' ? 'selected' : '' %>>Female</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="birth_day">Birthday</label>
                    <div class="input-group">
                      <span class="input-group-text"><img src="/images/date.svg" class="mCS_img_loaded"></span>
                      <input type="date" name="birth_day" class="form-control " id="birth_day" value="<%=birth_day %>">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="start_date">Start Date
                    </label>
                    <div class="input-group">
                      <span class="input-group-text"><img src="/images/date.svg" class="mCS_img_loaded"></span>
                      <input type="date" name="start_date" value="<%=start_date %>" class="form-control " placeholder="Enter Start Date.." id="start_date">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <!-- <label class="col-form-label label-align" for="skill_level">Skill Level</label> 
                      <div class="input-group">
                      <span class="input-group-text"><img src="/images/level.svg" class="mCS_img_loaded"></span>
                      <input type="text" name="skill_level"  value="<%=data.skill_level %>"  class="form-control " placeholder="Enter Skill Level.." id="skill_level">
                    </div> -->
                    <label class="col-form-label label-align" for="grade_id">Grade</label>
                    <div class="input-group flex-nowrap">
                      <span class="input-group-text"><img src="/images/level.svg" class="mCS_img_loaded"></span>
                      <select class="form-control select2" name="grade_id" id="grade_id">
                        <option value="">Select Grade</option>
                        <% for(Grade of grade){%>
                          <option value="<%=Grade.id%>" <%=data.grade_id==Grade.id ? 'selected' : '' %>><%=Grade.name%></option>
                        <%}%>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="school">School</label>
                    <div class="input-group flex-nowrap">
                      <span class="input-group-text"><img src="/images/school.svg" class="mCS_img_loaded"></span>
                      <select class="form-control select2" name="school_id" >
                        <option value="">Select School</option>
                        <% for(school of school_data) { %>
                          <option value="<%=school.id%>" <%=data.school_id==school.id ? 'selected' : '' %>><%=school.name%></option>
                        <% } %> 
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="referrer">Referrer</label>
                    <div class="input-group">
                      <span class="input-group-text"><img src="/images/referrer.svg" class="mCS_img_loaded"></span>
                      <input type="text" name="referrer" class="form-control " placeholder="Enter Skill Level.." id="referrer" value="<%=data.referrer %>">
                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="notes">Notes </label>
                    <textarea name="note" rows="5" class="form-control" placeholder="Enter Notes.." id="notes"><%=data.note %></textarea>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="col-form-label label-align" for="status">Status<span
                      class="required">*</span>
                  </label>
                    <div class="input-group flex-nowrap">
                      <span class="input-group-text"><img src="/images/status.svg" class="mCS_img_loaded"></span>
                      <select class="form-control select2" name="status" id="status">
                        <option value="1" <%=data.status=='1' ? 'selected' : '' %>>Active</option>
                        <option value="0" <%=data.status=='0' ? 'selected' : '' %>>Deactive</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>  
            </div>
            <div class="col-md-4">
              <div class="form-group drop-file">
                <label class="col-form-label label-align" for="profile_image">Profile Image</label>
                <input type="file" name="profile_image" id="profile_image" class="form-control dropify h-auto" <% if
                (data.profile_image !='' && fs.existsSync("assets/ProfileImage/"+data.profile_image)) { %>
              data-default-file="/ProfileImage/<%=data.profile_image%>" <% }%>
                  data-allowed-file-extensions="jpg png jpeg" data-max-file-size-preview="5M"
                  <% if (data.profile_image !='' && fs.existsSync("assets/ProfileImage/"+data.profile_image)) { %>
                    value=" <%=data.profile_image %>" <% } else { %> value="" <% } %> >
              </div>
              <input type="hidden" name="is_remove" id="is_image_removed" value="0">
            </div>
          </div>

          <div class="ln_solid"></div>
          <div class="text-right">
            <button type="submit" id="updateStudentBtn" class="btn theme-btn form-button">Update</button>
          </div>
          
        </form>
      </div>
    </div>
  </div>
  <!-- page title end -->
  </div>

  <%- include('./script'); %>