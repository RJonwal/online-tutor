<div class="right_col" role="main">
  <!-- page content starts -->
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade1"><%=studentObject.total%></span>
            <h3 class="title-text mb-0">Total Students</h3>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade2"><%=studentObject.active%></span>
            <h3 class="title-text mb-0">Active Students</h3>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade3"><%=studentObject.deactive%></span>
            <h3 class="title-text mb-0">Deactive Students</h3>
        </div>
    </div>
  </div>
  <div class="card-block mb-30">
    <h3 class="title-text">Filter Students</h3>
    <ul class="filter-row">
      <li class="filter-col">
        <select class="selectlink form-control">
          <option value="">Select tutor</option>
          <option value="1">Andrew</option>
          <option value="2">Bella</option>
          <option value="3">Angel</option>
          <option value="4">Tie</option>
          <option value="5">Edword</option>
        </select>
      </li>
      <li class="filter-col">
        <select class="selectlink form-control">
          <option value="">Select Status</option>
          <option value="1">Active</option>
          <option value="2">Deactive</option>
        </select>
      </li>
      <li class="filter-col">
        <select class="selectlink form-control">
          <option value="">Select Grade</option>
          <option value="1">English</option>
          <option value="2">Class 2nd</option>
          <option value="3">Class 3rd</option>
          <option value="4">Class 4th</option>
          <option value="5">Class 5th</option>
        </select>
      </li>
      <li class="filter-col">
        <button class="btn theme-btn">Filter Results</button>
      </li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <div class="x_panel">
        <div class="x_title">
          <h3 class="title-text">Students List</h3>
          <ul class="right-btns">
            <li><a href="./students/create" class="btn theme-btn" rel="tooltip" data-placement="top"
                title="Add">+ Add Student</a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <div class="row">
            <div class="col-sm-12">
              <div class="card-box table-responsive">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                  cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th>S.No</th>
                      <th>Image</th>
                      <th>Name</th>
                      <th>Contact No</th>
                      <th>Email</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let i=0; for(student of data) { %>
                      <tr>
                        <td>
                          <%=++i%>
                        </td>
                        <td>
                          <% if (student.profile_image !='' &&
                          fs.existsSync("assets/ProfileImage/"+student.profile_image)) { %>
                          <a href="/ProfileImage/<%=student.profile_image%>"
                            data-lightbox="image_<%=student.id%>"> <img
                              src="/ProfileImage/<%=student.profile_image%>" alt="<%=student.first_name+' '+student.last_name %>" class="img-thumbnail" /></a>
                          <% } else{ %>
                            <a href="/images/noImage.jpg" data-lightbox="image_007"> <img src="/images/noImage.jpg"
                                alt="no-image" class="img-thumbnail" /></a>
                            <% } %>
                        </td>
                        <td>
                          <%=student.first_name +' '+student.last_name %>
                        </td>
                        <td>
                          <%=student.phone ? '+'+student.dial_code+' '+student.phone: '' %>
                        </td>
                        <td>
                            <%=student.email%>
                          </td>
                        <td>
                          <label class="checkbox-inline">
                            <input type="checkbox" name="status" class="record-status" data-toggle="toggle"
                              data-on="Active" data-off="Deactive" data-onstyle="info" data-offstyle="danger"
                              data-url="/students/update-status" data-uid="<%=student.id%>" id="toggle-trigger"
                              <%=student.status==1 ? 'checked' : '' %>>
                          </label>
                        </td>
                        <td>
                          <div class="d-flex align-items-center">
                            <a class="" href="/students/edit/<%=student.id%>" data-toggle="tooltip"
                            rel="tooltip" data-placement="top" title="Edit"><img src="/images/edit.svg" alt="icon"></a>

                            <a href="javascript:void(0)" class="ml-2"
                                onclick="confirmBeforeDeletion('/students/destroy/<%=student.id%>')"><img src="/images/trash.svg" alt="icon" data-toggle="tooltip" rel="tooltip"
                                data-placement="top" title="Delete"></a>
                            </div>
                        </td>
                      </tr>
                      <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- page content end -->
</div>