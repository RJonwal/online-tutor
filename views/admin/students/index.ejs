
<div class="right_col" role="main">
      <!-- page content starts -->
      <div class="card-block mb-30">
        <h3 class="title-text">Filter Courses</h3>
        <ul class="filter-row">
          <li class="filter-col">
            <select class="selectlink form-control">
              <option value="">Select tutor</option>
              <option value="1">Andrew</option>
              <option value="2">Bella</option>
              <option value="3">Angel</option>
              <option value="4">Tie</option>
              <option value="5">Edword</option>
            </select>
          </li>
          <li class="filter-col">
            <select class="selectlink form-control">
              <option value="">Select Status</option>
              <option value="1">Active</option>
              <option value="2">Deactive</option>
            </select>
          </li>
          <li class="filter-col">
            <select class="selectlink form-control">
              <option value="">Select Grade</option>
              <option value="1">English</option>
              <option value="2">Class 2nd</option>
              <option value="3">Class 3rd</option>
              <option value="4">Class 4th</option>
              <option value="5">Class 5th</option>
            </select>
          </li>
          <li class="filter-col">
            <button class="btn theme-btn">Filter Results</button>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <div class="x_panel">
            <div class="x_title">
              <h3 class="title-text">Student List</h3>
              <ul class="right-btns">
                <li><a href="./students/create" class="btn theme-btn" rel="tooltip" data-placement="top"
                    title="Add">+ Add Student</a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <div class="row">
                <div class="col-sm-12">
                  <div class="card-box table-responsive">
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                      cellspacing="0" width="100%">
                      <thead>
                        <tr>
                          <th>S.No</th>
                          <th>Name</th>
                          <th>Contact No</th>
                          <th>Email</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let i=0; for(student of data) { %>
                          <tr>
                            <td>
                              <%=++i%>
                            </td>
                            <td>
                              <%=student.first_name +' '+student.last_name %>
                            </td>
                            <td>
                              <%=student.phone%>
                            </td>
                            <td>
                                <%=student.email%>
                              </td>
                            <td>
                              <%= student.status==1 ? 'Active' : 'Deactive' %>
                            </td>
                            <td>
                              <div class="d-flex align-items-center">
                                <a class="" href="/students/edit/<%=student.id%>" data-toggle="tooltip"
                                rel="tooltip" data-placement="top" title="Edit"><img src="/images/edit.svg" alt="icon"></a>
  
                                <a class="ml-2" data-toggle="tooltip" rel="tooltip" data-placement="top"
                                title="Delete" style="cursor: pointer;"> <i class="fa fa-trash" style="color: #ffffff;"
                                  data-toggle="confirmation" data-singleton="true"
                                  data-title="Are You Sure Want To Delete?"
                                  href="/students/destroy/<%=student.id%>"></i></a>
                                </div>
                            </td>
                          </tr>
                          <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- page content end -->
  </div>