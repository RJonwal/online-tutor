
<div class="right_col" role="main">
    <div class="">
      <!-- page title starts -->
      <div class="page-title">
        <div class="title_left">
          <!-- <h3>students</h3> -->
        </div>
      </div>
      <div class="clearfix"></div>
      <!-- page title end -->
  
      <!-- page content starts -->
      <div class="row">
        <div class="col-md-12 col-sm-12 ">
          <div class="x_panel">
            <div class="x_title">
              <h2>student<small>list</small></h2>
            
              <ul class="nav navbar-right panel_toolbox">
                <li> <a href="./students/create" class="btn btn-info btn-sm" rel="tooltip" data-placement="top"
                    title="Add">+ Add Student</a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <div class="row">
                <div class="col-sm-12">
                  <div class="card-box table-responsive">
                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                      cellspacing="0" width="100%">
                      <thead>
                        <tr>
                          <th>S.No</th>
                          <th>Name</th>
                          <th>Contact No</th>
                          <th>Email</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let i=0; for(student of data) { %>
                          <tr>
                            <td>
                              <%=++i%>
                            </td>
                            <td>
                              <%=student.first_name +' '+student.last_name %>
                            </td>
                            <td>
                              <%=student.phone%>
                            </td>
                            <td>
                                <%=student.email%>
                              </td>
                            <td>
                              <%= student.status==1 ? 'Active' : 'Deactive' %>
                            </td>
                            <td>
                              <a class="btn btn-info m-1" href="/students/edit/<%=student.id%>" data-toggle="tooltip"
                                rel="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></a>
  
                              <a class="btn btn-info m-1" data-toggle="tooltip" rel="tooltip" data-placement="top"
                                title="Delete" style="cursor: pointer;"> <i class="fa fa-trash" style="color: #ffffff;"
                                  data-toggle="confirmation" data-singleton="true"
                                  data-title="Are You Sure Want To Delete?"
                                  href="/students/destroy/<%=student.id%>"></i></a>
                            </td>
                          </tr>
                          <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- page content end -->
    </div>
  </div>