<div class="right_col" role="main">
  <!-- page content starts -->
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade1"><%=tutorObject.total%></span>
            <h3 class="title-text mb-0">Total Tutors</h3>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade2"><%=tutorObject.active%></span>
            <h3 class="title-text mb-0">Active Tutors</h3>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade3"><%=tutorObject.deactive%></span>
            <h3 class="title-text mb-0">Deactive Tutors</h3>
        </div>
    </div>
  </div>
  <div class="card-block mb-30">
    <h3 class="title-text">Filter Tutors</h3>
    <ul class="filter-row">
      <li class="filter-col">
        <select class="form-control" id="tutor-name" tabindex="-1" single>
          <option value="">Select tutor</option>
          <% for(tutor of data) { %>
            <option value="<%=tutor.id%>">
              <%=tutor.first_name+' '+tutor.last_name %>
            </option>
            <% } %>
        </select>
      </li>
      <li class="filter-col">
        <select class="form-control" id="tutor-subjects" tabindex="-1" single>
          <option value="">Select Subject</option>
          <option value="1">English</option>
          <option value="2">Class 2nd</option>
          <option value="3">Class 3rd</option>
          <option value="4">Class 4th</option>
          <option value="5">Class 5th</option>
        </select>
      </li>
      <li class="filter-col">
        <select class="form-control" id="tutor-status" tabindex="-1" single>
          <option value="">Select Status</option>
          <option value="1">Active</option>
          <option value="0">Deactive</option>
        </select>
      </li>
      <li class="filter-col">
        <button class="btn theme-btn">Filter Results</button>
      </li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <div class="x_panel">
        <div class="x_title">
          <h3 class="title-text">Tutors List</h3>
          <ul class="right-btns">
            <li> <a href="./tutors/create" class="btn theme-btn" rel="tooltip" data-placement="top"
                title="Add">+ Add Tutor</a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <div class="card-box table-responsive">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
              cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th>S.No</th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Courses</th>
                  <th>Subjects</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% let i=0; for(tutor of data) { %>
                  <tr>
                    <td>
                      <%=++i%>
                    </td>
                    <td>
                      <% if (tutor.profile_image !='' &&
                      fs.existsSync("assets/ProfileImage/"+tutor.profile_image)) { %>
                      <a href="/ProfileImage/<%=tutor.profile_image%>"
                        data-lightbox="image_<%=tutor.id%>"> <img
                          src="/ProfileImage/<%=tutor.profile_image%>" alt="<%=tutor.first_name+' '+tutor.last_name %>" class="img-thumbnail" /></a>
                      <% } else{ %>
                        <a href="/images/noImage.jpg" data-lightbox="image_007"> <img src="/images/noImage.jpg"
                            alt="no-image" class="img-thumbnail" /></a>
                        <% } %>
                    </td>
                    <td class="text-capitalize">
                      <%= tutor.title %>
                      <%=tutor.first_name+' '+tutor.last_name %>
                    </td>
                    <td>
                      <%=tutor.email %>
                    </td>
                    <td>
                     12
                    </td>
                    <td>
                      <div class="subcat-info">
                        <% for(sub of subject) { 
                          if (tutor.subject_ids.includes(sub.id)) { %>
                          <a href="#" class="badge badge-info"><%=sub.name%></a>
                        <% } } %>
                      </div>
                    </td>
                    <td>
                      <label class="checkbox-inline">
                        <input type="checkbox" name="status" class="record-status" data-toggle="toggle"
                          data-on="Active" data-off="Deactive" data-onstyle="info" data-offstyle="danger"
                          data-url="/tutors/update-status" data-uid="<%=tutor.id%>" id="toggle-trigger"   <%=tutor.status==1 ? 'checked' : '' %>>
                      </label>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <a class="" href="/tutors/edit/<%=tutor.id%>" data-toggle="tooltip"
                          rel="tooltip" data-placement="top" title="Edit">
                        <img src="/images/edit.svg" alt="icon">
                        </a>

                      <a href="javascript:void(0)" class="ml-2"
                      onclick="confirmBeforeDeletion('/tutors/destroy/<%=tutor.id%>')"> <img src="/images/trash.svg" alt="icon" data-toggle="tooltip" rel="tooltip" data-placement="top"
                      title="Delete"></a>
                        </a>
                      </div>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
    <!-- page content end -->
</div>


<script type="text/javascript">
  $(document).ready(function () {

    $("#tutor-name").select2({
      placeholder: "Select Tutor",
      allowClear: false,
    });

    $("#tutor-subjects").select2({
      placeholder: "Select Subjects",
      allowClear: false,
    });

    $("#tutor-status").select2({
      placeholder: "Select Status",
      allowClear: false,
    });
  });
</script>
