<div class="right_col" role="main">
  <!-- page content starts -->
  <div class="card-block mb-30">
    <h3 class="title-text">Filter Grades</h3>
    <ul class="filter-row">
      <li class="filter-col">
        <select class="form-control" id="grade-name" tabindex="-1" single>
          <option value="">Select Grade</option>
          <% for(grade of data) { %>
            <option value="<%=grade.id%>">
              <%=grade.name%>
            </option>
            <% } %>
        </select>
      </li>
      <li class="filter-col">
        <select class="form-control" id="status" tabindex="-1" single>
          <option value="">Select Status</option>
          <option value="1">Active</option>
          <option value="2">Deactive</option>
        </select>
      </li>
      <li class="filter-col">
        <button class="btn theme-btn">Filter Results</button>
      </li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <div class="x_panel">
        <div class="x_title">
          <h3 class="title-text">Grades List</h3>
          <ul class="right-btns">
            <li> <a href="./grades/create" class="btn theme-btn" data-toggle="tooltip" rel="tooltip"
                data-placement="top" title="Add Grade">+ Add Grade</a>
            </li>
          </ul>
        </div>
        <div class="x_content">
          <div class="row">
            <div class="col-sm-12">
              <div class="card-box table-responsive">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                  cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th>S.No</th>
                      <th>Grade Name</th>
                      <th>Status</th>
                      <th>Created At</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let i=0; for(grade of data) { %>
                      <tr>
                        <td>
                          <%=++i%>
                        </td>
                        <td>
                          <%=grade.name%>
                        </td>
                        <td>
                          <label class="checkbox-inline">
                            <input type="checkbox" name="status" class="record-status" data-toggle="toggle"
                              data-on="Active" data-off="Deactive" data-onstyle="info" data-offstyle="danger"
                              data-url="/grades/update-status" data-uid="<%=grade.id%>" id="toggle-trigger"
                              <%=grade.status==1 ? 'checked' : '' %>>
                          </label>
                        </td>
                        <td>
                          <%=grade.created_at.toDateString()%>
                        </td>
                        <td>
                          <div class="d-flex align-items-center">
                            <a class="" href="/grades/edit/<%=grade.id%>" data-toggle="tooltip" rel="tooltip"
                              data-placement="top" title="Edit"><img src="/images/edit.svg" alt="icon"></a>

                            <a href="javascript:void(0)" class="ml-2"
                              onclick="confirmBeforeDeletion('/grades/destroy/<%=grade.id%>')"> <img
                                src="/images/trash.svg" alt="icon" data-toggle="tooltip" rel="tooltip"
                                data-placement="top" title="Delete"></a>
                          </div>
                        </td>
                      </tr>
                      <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- page content end -->
    </div>
  </div>
  <!-- page content end -->
</div>


<script type="text/javascript">
  $(document).ready(function () {
    $("#grade-name").select2({
      placeholder: "Select Grade",
      allowClear: false,
    });
    $("#status").select2({
      placeholder: "Select Status",
      allowClear: false,
    });
  });
</script>