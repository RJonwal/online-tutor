<div class="right_col" role="main">
  <!-- page content starts -->
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade1"><%=TopicObject.total%></span>
            <h3 class="title-text mb-0">Total Topics</h3>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade2"><%=TopicObject.active%></span>
            <h3 class="title-text mb-0">Active Topics</h3>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="stcard-box">
            <span class="shade3"><%=TopicObject.deactive%></span>
            <h3 class="title-text mb-0">Deactive Topics</h3>
        </div>
    </div>
  </div>
  <div class="card-block mb-30">
    <h3 class="title-text">Filter Topic</h3>
    <ul class="filter-row">
      <li class="filter-col">
        <select class="form-control" id="topic-name" tabindex="-1" single>
          <option value="">Select Topic</option>
          <% for(topic of data) { %>
            <option value="<%=topic.id%>">
              <%=topic.name%>
            </option>
            <% } %>
        </select>
      </li>
      <li class="filter-col">
        <select class="form-control" id="topic-status" tabindex="-1" single>
          <option value="">Select Status</option>
          <option value="1">Active</option>
          <option value="0">Deactive</option>
        </select>
      </li>
      <li class="filter-col">
        <button class="btn theme-btn">Filter Results</button>
      </li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <div class="x_panel">
        <div class="x_title">
          <h3 class="title-text">Main Topic List</h3>
          <ul class="right-btns">
            <li> <a href="./topics/create" class="btn theme-btn" data-toggle="tooltip" rel="tooltip"
              data-placement="top" title="Add Topic">+
                Add Topic</a>
            </li>
          </ul>
        </div>
        <div class="x_content">
          <div class="row">
            <div class="col-sm-12">
              <div class="card-box table-responsive">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                  cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th>S.No</th>
                      <th>Image</th>
                      <th>Name</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let i=0; for(topic of data) { %>
                      <tr>
                        <td>
                          <%=++i%>
                        </td>
                        <td>
                            <% if (topic.topic_image !='' &&
                              fs.existsSync("assets/TopicImage/"+topic.topic_image)) { %>
                              <a href="/TopicImage/<%=topic.topic_image%>"
                                data-lightbox="image_<%=topic.id%>"> <img
                                  src="/TopicImage/<%=topic.topic_image%>" alt="<%=topic.name%>" class="img-thumbnail" /></a>
                              <% } else{ %>
                                <a href="/images/noImage.jpg" data-lightbox="image_007"> <img src="/images/noImage.jpg"
                                    alt="no-image" class="img-thumbnail" /></a>
                                <% } %>
                        </td>
                        <td class="text-capitalize">
                          <%=topic.name%>
                        </td>
                        <td>
                          <label class="checkbox-inline">
                            <input type="checkbox" name="status" class="record-status" data-toggle="toggle"
                              data-on="Active" data-off="Deactive" data-onstyle="info" data-offstyle="danger"
                              data-url="/topics/update-status" data-uid="<%=topic.id%>" id="toggle-trigger"
                              <%=topic.status==1 ? 'checked' : '' %>>
                          </label>
                        </td>
                        <td>
                          <div class="d-flex align-items-center">
                            <a class="" href="/topics/edit/<%=topic.id%>" data-toggle="tooltip" rel="tooltip"
                              data-placement="top" title="Edit"><img src="/images/edit.svg" alt="icon"></a>

                            <a href="javascript:void(0)" class="ml-2"
                              onclick="confirmBeforeDeletion('/topics/destroy/<%=topic.id%>')"> <img
                                src="/images/trash.svg" alt="icon" data-toggle="tooltip" rel="tooltip"
                                data-placement="top" title="Delete"></a>
                          </div>
                        </td>
                      </tr>
                      <% } %>
                  </tbody>
                </table>pic-status
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- page content end -->
</div>

<script type="text/javascript">
  $(document).ready(function () {
    $("#topic-name").select2({
      placeholder: "Select Topic",
      allowClear: false,
    });

    $("#topic-status").select2({
      placeholder: "Select Status",
      allowClear: false,
    });
  });
</script>