    <div class="row">
      <div class="x_panel">
        <div class="x_title">
          <h2>Add SubCategory<small></small></h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br>
          <form id="createSubCategory" action="./store" method="post" class="form-horizontal form-label-left">

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="category_id">Main Category<span
                  class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 ">
                <select class="select2_single form-control" name="category_id" id="category_id" tabindex="-1">
                  <option value="">Select Main Category</option>
                  <% let i=0; for(category of data) { %>
                    <option value="<%=category.id%>">
                      <%=category.name%>
                    </option>
                    <% } %>
                </select>
              </div>
            </div>

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="name">SubCategory Name<span
                  class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 ">
                <input type="text" name="name" class="form-control" placeholder="Enter Category Name.."
                  required="required" id="name">
              </div>
            </div>

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="note">Note</span>
              </label>
              <div class="col-md-6 col-sm-6 ">
                <textarea name="note" rows="5" class="form-control" placeholder="Enter Note.." id="note"></textarea>
              </div>
            </div>

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="status">Status<span
                  class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 ">
                <select class="form-control" name="status" id="status">
                  <option value="0">Deactivate</option>
                  <option value="1">Activate</option>
                </select>
              </div>
            </div>

            <div class="ln_solid"></div>
            <div class="form-group row">
              <div class="col-md-9 col-sm-9  offset-md-3">
                <button type="submit" id="storeSubCategoryBtn" class="btn btn-success form-button">Save</button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
