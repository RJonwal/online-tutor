    <!-- page content starts -->
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>School<small>list</small></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li> <a href="./schools/create" class="btn btn-info btn-sm" rel="tooltip" data-placement="top"
                  title="Add">+ Add School</a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                    cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>S.No</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact No</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% let i=0; for(school of data) { %>
                        <tr>
                          <td>
                            <%=++i%>
                          </td>
                          <td>
                            <%=school.name%>
                          </td>
                          <td>
                            <%=school.email%>
                          </td>
                          <td>
                            <%=school.phone%>
                          </td>
                          <td>
                            <%=school.address%>
                          </td>
                          <td>
                            <%= school.status==1 ? 'Active' : 'Deactive' %>
                          </td>
                          <td>
                            <a class="btn btn-info m-1" href="/schools/edit/<%=school.id%>" data-toggle="tooltip"
                              rel="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></a>
                              <a href="javascript:void(0)" class="btn btn-info m-1" onclick="confirm_modal('/schools/destroy/<%=school.id%>')"> <i class="fa fa-trash" style="color: #ffffff;"></i></a>
                          </td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- page content end -->
  </div>
