              <!-- page content starts-->
              <div class="row">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Edit Category<small></small></h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <br>
                    <form id="updateCategory" action="/categories/update" method="post"
                      class="form-horizontal form-label-left" novalidate>

                      <input type="hidden" name="category_id" value="<%=data.id %>">

                      <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="name">Category Name<span
                            class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                          <input type="text" name="name" class="form-control" placeholder="Enter Category Name.."
                            required="required" id="name" value="<%=data.name %>">
                        </div>
                      </div>

                      <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="category_image">Featured
                          Image<span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                          <input type="file" name="category_image" id="category_image" class="form-control dropify"
                          data-default-file="/CategoryImage/<%=data.category_image%>" data-allowed-file-extensions="jpg png jpeg" data-max-file-size-preview="5M" value="<%=data.category_image %>">
                        </div>
                      </div>

                      <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="note">Note</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                          <textarea name="note" rows="5" class="form-control" placeholder="Enter Note.."
                            id="note"><%=data.note %></textarea>
                        </div>
                      </div>

                      <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="status">Status<span
                            class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                          <select class="form-control" name="status" id="status">
                            <option value="1" <%=data.status=='1' ? 'selected' : '' %>>Active</option>
                            <option value="0" <%=data.status=='0' ? 'selected' : '' %>>Deactive</option>
                          </select>
                        </div>
                      </div>

                      <div class="ln_solid"></div>
                      <div class="form-group row">
                        <div class="col-md-9 col-sm-9  offset-md-3">

                          <button type="submit" id="updateCategoryBtn"
                            class="btn btn-success form-button">Update</button>
                        </div>
                      </div>

                    </form>
                  </div>
                </div>
              </div>
              <!-- page title end -->
