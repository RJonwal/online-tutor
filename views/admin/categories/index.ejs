<div class="right_col" role="main">
  <div class="">

    <!-- page title starts -->
    <div class="page-title">
      <div class="title_left">
        <!-- <h3>Categories</h3> -->
      </div>

      <!-- <div class="title_right">
                <div class="col-md-5 col-sm-5 form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                  </div>
                </div>
              </div> -->
    </div>
    <div class="clearfix"></div>
    <!-- page title end -->

    <!-- page content starts -->
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Category<small>list</small></h2>
            <ul class="right-btns">
              <li> <a href="./categories/create" class="btn theme-btn" rel="tooltip" data-placement="top" title="Add">+
                  Add Category</a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                    cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>S.No</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% let i=0; for(category of data) { %>
                        <tr>
                          <td>
                            <%=++i%>
                          </td>
                          <td>
                            <div class="avatar avatar-blue mr-3">
                              <% if (category.category_image !='' &&
                                fs.existsSync("assets/CategoryImage/"+category.category_image)) { %>
                                <img src="/CategoryImage/<%=category.category_image%>" data-lightbox="image_<%=category.id%>" alt="<%=category.name%>" />
                                <% } else{ %>
                                  <img src="/images/noImage.jpg" alt="no-image" />
                                  <% } %>
                            </div>
                          </td>
                          <td>
                            <%=category.name%>
                          </td>
                          <td>
                            <label class="checkbox-inline">
                              <input type="checkbox" name="status" class="record-status" data-toggle="toggle"
                                data-on="Active" data-off="Deactive" data-onstyle="info" data-offstyle="danger"
                                data-url="/categories/update-status" data-uid="<%=category.id%>" id="toggle-trigger"
                                <%=category.status==1 ? 'checked' : '' %>>
                            </label>
                          </td>
                          <td>
                            <a class="btn btn-info m-1" href="/categories/edit/<%=category.id%>" data-toggle="tooltip"
                              rel="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></a>

                            <a href="javascript:void(0)" class="btn btn-info m-1"
                              onclick="confirmBeforeDeletion('/categories/destroy/<%=category.id%>')"> <i
                                class="fa fa-trash" style="color: #ffffff;" data-toggle="tooltip" rel="tooltip"
                                data-placement="top" title="Delete"></i></a>
                          </td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- page content end -->
  </div>
</div>

