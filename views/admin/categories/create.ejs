    <div class="row">
      <div class="x_panel">
        <div class="x_title">
          <h2>Add Category<small></small></h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br>
          <form id="createCategory" action="./store" method="post" class="form-horizontal form-label-left"
            enctype="multipart/form-data">

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="name">Category Name<span
                  class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 ">
                <input type="text" name="name" class="form-control" placeholder="Enter Category Name.." id="name">
              </div>
            </div>

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="category_image">Featured
                Image
              </label>
              <div class="col-md-6 col-sm-6 ">
                <input type="file" name="category_image" id="category_image" class="form-control dropify"
                  data-allowed-file-extensions="jpg png jpeg" data-max-file-size-preview="5M">
              </div>
            </div>

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="note">Note</span>
              </label>
              <div class="col-md-6 col-sm-6 ">
                <textarea name="note" rows="5" class="form-control" placeholder="Enter Note.." id="note"></textarea>
              </div>
            </div>

            <div class="item form-group">
              <label class="col-form-label col-md-3 col-sm-3 label-align" for="status">Status<span
                  class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 ">
                <select class="form-control" name="status" id="status">
                  <option value="0">Deactivate</option>
                  <option value="1">Activate</option>
                </select>
              </div>
            </div>

            <div class="ln_solid"></div>
            <div class="form-group row">
              <div class="col-md-9 col-sm-9  offset-md-3">
                <button type="submit" id="storeCategoryBtn" class="btn btn-success form-button">Save</button>
              </div>
            </div>

          </form>
        </div>
