<body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <%- include('../../partials/_sidebar'); %>
          <!-- top navigation -->
          <div class="top_nav">
            <div class="nav_menu">
              <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
              </div>
            </div>
          </div>
          <div class="right_col" role="main">
            <div class="">
              <div class="row">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Edit Grade<small></small></h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <br>
                    <form action="/grade/update" method="post" class="form-horizontal form-label-left" id="demo-form2">
                      <input type="hidden" name="grade_id" value="<%=data.id %>">
  
                      <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="name">Grade Name<span
                            class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                          <input type="text" name="name" class="form-control" placeholder="Enter Name.." id="name"
                            required="required" value="<%=data.name %>">
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="name">Status<span
                            class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <select class="form-control" name="status">
                                <option value="1" <%= data.status == '1' ? 'selected' : ''%>>Active</option>
                                <option value="2" <%= data.status == '2' ? 'selected' : ''%>>Deactive</option>
                            </select>
                        </div>
                      </div>
                      <div class="form-group row text-center">
                        <div class="col-md-12 col-sm-12">
                          <button type="submit" class="btn btn-success">Update</button>
                        </div>
                      </div>
  
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
